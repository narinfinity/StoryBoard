@model StoryBoard.Web.Models.GroupViewModel
@{
    ViewBag.Title = Model != null && Model.Id > 0 ? "Edit group" : "Add a group";
}

<div class="jumbotron">
    <h1>@ViewBag.Title</h1>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <div>
                    <a href="@Url.Action("GroupList", "Home")"><i>Back to Groups</i></a>
                </div>
                <br/>
                <div id="myStory-listview" class="k-listview k-widget k-selectable" data-role="listview" role="listbox">
                    <div class="k-button k-listview-item text-left justified">
                        
                        <form class="form-horizontal col-md-12" method="post" onsubmit="false" action="@Url.Action("SaveGroup", "Home")">
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(m => m.Id)
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group">
                                <label for="txt-group-title" class="col-md-2 control-label">Title:</label>
                                <div class="col-md-2">
                                    @Html.TextBoxFor(m => m.Title, new
                               {
                                   id = "txt-group-title",
                                   @class = "k-textbox",
                                   placeholder = "Title",
                                   maxlength = 128,
                                   required = "",
                                   data_required_msg = "Title is required"
                               })
                                    <span class="k-invalid-msg" data-for="Title"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txt-group-title" class="col-md-2 control-label">Description:</label>
                                <div class="col-md-2">
                                    @Html.TextBoxFor(m => m.Description, new
                               {
                                   id = "txt-group-description",
                                   @class = "k-textbox",
                                   placeholder = "Description",
                                   maxlength = 256,
                                   required = "",
                                   data_required_msg = "Title is required"
                               })
                                    <span class="k-invalid-msg" data-for="Description"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txt-group-content" class="col-md-2 control-label">Content:</label>
                                <div class="col-md-9">
                                    @Html.TextAreaFor(m => m.Content, new
                               {
                                   id = "txt-group-content",
                                   rows = 5,
                                   cols = 100,
                                   style = "overflow:auto;resize:none",
                                   @class = "k-textbox",
                                   placeholder = "Content",
                                   maxlength = 512,
                                   required = "",
                                   data_required_msg = "Content is required",
                               })
                                    <span class="k-invalid-msg" data-for="Content"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-11">
                                    <button class="btn btn-large btn-primary pull-right" type="submit">Save</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
@section Scripts {   

    @Scripts.Render("~/bundles/jqueryval")
}
